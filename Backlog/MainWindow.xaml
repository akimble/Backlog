<Window x:Class="Backlog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backlog"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF272525">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Backlogs" VerticalAlignment="Top" Height="30" Background="#FFF4FD39" FontFamily="Segoe UI Semibold" FontSize="18" TextDecorations="Underline" TextAlignment="Center"/>
        <Button Content="New Backlog..." HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="10,0" VerticalContentAlignment="Center" FontSize="11" Click="newBacklog_Click"/>

    </Grid>
</Window>
